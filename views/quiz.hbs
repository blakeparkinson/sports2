<div class="columns">
  <div id="new-team-name">{{team_name}}</div>
  <div id="left-quiz-column">
    <div class="team-container">
      <div id="align-clock">
        <span class="clock">{{clock}}</span>
      </div>
      <div class="name-point-container">
        <div class="form-group player-name">
          <input type="text" class="form-control" id="guess-box" placeholder="Enter Player Name">
          <span class="glyphicon glyphicon-ok hidden"></span>
        </div>
        <div class="point-container rb-green">
          <p class="number">0</p>
          <p class="points">points</p>
        </div>
      </div>
      <div class="button-section">
        <div class="btn btn-success quit-btn">Give Up</div>
      </div>
    </div>
    <!--
      <div id="also-might-like" hidden>
        <span id="also-like-inner">
          You also might like:
          <span id="trending-guys-inner">
            {{#each trending_quiz}}
              <span class="trending-quiz create-quiz" data-id={{rb_team_id}}>{{quiz_name}}{{comma}}</span>
            {{/each}}
          </span>
        </span>
      </div>
      -->
  </div>
  <div id="right-quiz-column">
    <div id="right-column-contain">
      <div id="card">
        <div class="answer-container front">
          <div class="cover" style="background-image: url({{logo_url}})"></div>
          <div class="answer-container-contain" data-bhex="{{primary_hex}}" data-fhex="{{secondary_hex}}">
            <div class="answer-row subheader">Players Guessed</div>
            {{#if plainDisplay}}
            {{#each roster}}
            <div class="outer-guess">
              <div class="inner-guess">
                <div class="correct-guess no-flip" data-player-id="{{player_id}}" data-index="{{@index}}">{{inc @index}}.
                </div>
              </div>
            </div>
            {{/each}}
            {{/if}}
          </div>
        </div>
        <div class="player-card back"></div>
      </div>
    </div>
  </div>
</div>
{{> player_card }}
<!-- Modal -->
<div class="modal fade" id="graphModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  {{> quiz_graph}}
</div>
<script src='/javascripts/libraries/ZeroClipboard.min.js'></script>
<script type='text/javascript'>
  var league = '{{league}}',
    team_name = '{{team_name}}';
  var primary_hex = '{{primary_hex}}';
  var secondary_hex = '{{secondary_hex}}';
  var roster =  {{{json_stringify roster}}};
  var type = '{{type}}';
  var logo_url ='{{{logo_url}}}';
  var teamId = "{{team_id}}"
</script>
