  <div class="social-sidebar" data-title="Try out this quiz at Rosterblitz: ">
    <div id="share-1" class="share-element email-img" data-toggle="modal" data-target="#emailModal">
      <div id="email"></div>
    </div>
    <div id ="share-2" class="share-element">
      <div id="facebook" class="post-social"></div>
