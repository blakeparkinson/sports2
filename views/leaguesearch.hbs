<div class="league-middle">
  <div class="container-league">
    <div id="league-type"></div>    
    <div class="column-left all-columns pull-left">
      <div class="league-align-center">
        <p class="all-icons roster-icon" id="rosters-league-page" data-toggle="popover" data-container="body" data-placement="left" title="Team roster quizzes" data-content="See if you can name all the players on a specific team" data-trigger="hover">
        </p>
      </div>
    
      <div class="top-list-contain">  	    
        <div class="list-group group-rows">    
  	    {{#each popular_teams}}  
          <a href="#" data-team-id="{{team_id}}" data-type="{{type}}" class="create-quiz list-group-item league-search-items">{{team_name}}</a>
  	    {{/each}}    
  	  	</div>
    	</div>

  	</div>
    <div class="column-center all-columns pull-left">
      <div class="league-align-center">
        <p class="all-icons season-leaders-icon" id="season-leaders-league-page" data-container="body" data-trigger="hover" data-toggle="popover" data-placement="top" title="Current season leaders" data-content="Test yourself on the top performing players in the league this season">
        </p>
      </div>

      <div class="top-list-contain">
        <div class="list-group group-rows">    
        {{#each leaders}}  
          <a href="#" class="create-quiz list-group-item league-search-items" data-team-id="{{team_id}}" data-type="{{type}}">{{description}}</a>
        {{/each}}    
        </div>
      </div>
    
  	</div>
    <div class="column-right all-columns pull-left">
      <div class="league-align-center">
        <p class="goats-icon all-icons" id="goat-league-page" data-container="body" data-toggle="popover" data-placement="right" data-trigger="hover" title="Greatest Of All Time quizzes" data-content="Test your knowledge of the best players of ALL TIME in different categories">
        </p>
      </div>
      <div class="top-list-contain">
        <div class="list-group group-rows">  
         {{#each goats}}  
          <a href="#" class="create-quiz list-group-item league-search-items" data-team-id="{{team_id}}" data-type="{{type}}">{{description}}</a>
        {{/each}}  
        </div>
      </div>

    </div>
  </div>  
  <div id="trending-quiz-contain center" class="center-it2">
            
            <div>
              <span id="trending-guys-back">
                <span id="trending-guys-inner">
                  <div class="trendquiz">Just warming up</div>
                <button class="btn btn-success trending-quiz create-quiz" id="curvy-buttons" data-team-id="Qknb0gNGL1x" type="button" data-type="roster">
                  Name all teams<div class="g-badge badge-small-roster"></div>                  
                </button>                  
                <button class="btn btn-success trending-quiz create-quiz" id="curvy-buttons" data-team-id="XyAxCxNzUyl" type="button" data-type="roster">
                  Last 10 MLB champions<div class="g-badge badge-small-roster"></div>                  
                </button>                  
                <button class="btn btn-success trending-quiz create-quiz" id="curvy-buttons" data-team-id="m1fWCeNGLke" type="button" data-type="roster">
                  Name all positions<div class="g-badge badge-small-roster"></div>                  
                </button>                  
                </span>
              </span>
            </div>
            <br>
          </div>  
</div>	

